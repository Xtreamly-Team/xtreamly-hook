{
  "name": "hook_backend",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:integration": "ts-node test/run_db_tests.ts",
    "test:integration:user": "ts-node test/integration/user.test.ts",
    "test:integration:position": "ts-node test/integration/position.test.ts",
    "test:integration:dbSchemaCheck": "ts-node test/integration/DB/check_db_schema.ts",
    "test:integration:individual": "ts-node test/run_individual_test.ts",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "typeorm": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js",
    "migration:create": "npm run typeorm -- migration:create src/modules/database/migrations/Migration",
    "migration:generate": "npm run typeorm -- -d ormconfig.ts migration:generate src/modules/database/migrations/InitialSchema",
    "migration:run": "npm run typeorm -- -d ormconfig.ts migration:run",
    "migration:revert": "npm run typeorm -- -d ormconfig.ts migration:revert",
    "migration:show": "npm run typeorm -- -d ormconfig.ts migration:show",
    "db:schema:sync": "npm run typeorm -- -d ormconfig.ts schema:sync",
    "db:schema:log": "npm run typeorm -- -d ormconfig.ts schema:log",
    "db:drop": "npm run typeorm -- -d ormconfig.ts schema:drop",
    "db:check": "ts-node -r tsconfig-paths/register test/integration/DB/check-database.ts",
    "db:clean": "npm run typeorm -- -d ormconfig.ts schema:drop",
    "db:sync": "npm run typeorm -- -d ormconfig.ts schema:sync",
    "db:reset": "npm run db:clean && npm run migration:run",
    "db:seed": "ts-node -r tsconfig-paths/register test/integration/DB/seed-data.ts",
    "db:query": "ts-node -r tsconfig-paths/register test/integration/DB/query-data.ts",
    "db:check-columns": "ts-node -r tsconfig-paths/register test/integration/DB/check-columns.ts",
    "db:create-token-prices": "ts-node -r tsconfig-paths/register scripts/run-token-prices-migration.ts",
    "db:refresh-token-prices-view": "ts-node -r tsconfig-paths/register scripts/refresh-token-prices-view.ts",
    "db:seed-token-prices": "ts-node -r tsconfig-paths/register scripts/seed-token-prices.ts"
  },
  "dependencies": {
    "@nestjs/common": "^11.0.1",
    "@nestjs/core": "^11.0.1",
    "@nestjs/platform-express": "^11.0.1",
    "firebase-admin": "^13.2.0",
    "pnpm": "^10.6.2",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.18.0",
    "@nestjs/cli": "^11.0.0",
    "@nestjs/config": "^4.0.0",
    "@nestjs/devtools-integration": "^0.2.0",
    "@nestjs/schedule": "^5.0.1",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/testing": "^11.0.1",
    "@nestjs/typeorm": "^11.0.0",
    "@swc/cli": "^0.6.0",
    "@swc/core": "^1.10.7",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.13.8",
    "@types/pg": "^8.11.11",
    "@types/supertest": "^6.0.2",
    "axios": "^1.8.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "dotenv": "^16.4.7",
    "envalid": "^8.0.0",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.2",
    "globals": "^15.14.0",
    "jest": "^29.7.0",
    "pg": "^8.13.3",
    "prettier": "^3.4.2",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typeorm": "^0.3.20",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.20.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
